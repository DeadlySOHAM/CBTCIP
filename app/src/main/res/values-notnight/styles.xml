<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_background">
        <item name="android:background">@color/faded_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="task_text" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:minLines">1</item>
        <item name="android:textColor">@color/black_700</item>
    </style>

    <style name="scheduled_time_date" parent="@style/task_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black_700</item>
    </style>

    <style name="task_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:hint">@string/enter_task_hint</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:focusedByDefault">false</item>
    </style>

    <style name="task_input_field" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusedByDefault">false</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="date_time_button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="add_button" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>